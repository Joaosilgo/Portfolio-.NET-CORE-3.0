            <div>
                <a class="badge badge-light text-secondary">  @Html.DisplayFor(model => model.Language) </a>
                <a class="badge badge-light  text-secondary" href="@Html.DisplayFor(model => model.Link)"><i class="fas fa-code-branch"></i> SOURCE</a>
                <p class=" font-italic text-secondary">@Html.DisplayFor(model => model.SmallDescription)</p>
            </div>
            <hr />
            <div class="text-secondary">
                <h3 class="my-sm-4 font-weight-bold">Tecnologias</h3>
                <div>
                    <p class="font-italic multiline "> @Html.DisplayFor(model => model.Languages)</p>
                </div>
            </div>

            @*    </figure>*@
        </div>



        <div class="col col-sm-4 col-md-4">
            @{
                if (!String.IsNullOrEmpty(Model.Description))
                {
                    <div id="Description">
                        <h3 class="font-weight-bold my-3">Project Description</h3>
                        <hr />
                        <p class="font-italic font-weight-bold text-secondary">@Html.DisplayFor(model => model.Description)</p>
                    </div>
                }
            }

            @{
                if (!String.IsNullOrEmpty(Model.Intent))
                {
                    <div>
                        <h3 class="my-3 font-weight-bold">  @Html.DisplayNameFor(model => model.Intent)</h3>
                        <p class="font-italic font-weight-bold text-secondary">@Html.DisplayFor(model => model.Intent)</p>
                        <hr />
                    </div>
                }

            }

            @{
                if (!String.IsNullOrEmpty(Model.Features))
                {
                    <div>
                        <h3 class="my-3 font-weight-bold">  @Html.DisplayNameFor(model => model.Features)</h3>
                        <p class="font-italic font-weight-bold text-secondary"> @Html.DisplayFor(model => model.Features) </p>
                        <hr />
                    </div>
                }
            }

            @{
                if (!String.IsNullOrEmpty(Model.Difficulties))
                {
                    <div>
                        <h3 class="my-3 font-weight-bold">  @Html.DisplayNameFor(model => model.Difficulties)</h3>
                        <p class="font-italic font-weight-bold text-secondary">@Html.DisplayFor(model => model.Difficulties)</p>
                        <hr />
                    </div>
                }
            }
            @{
                if (!String.IsNullOrEmpty(Model.Solution))
                {

                    <div>
                        <h3 class="my-3 font-weight-bold">  @Html.DisplayNameFor(model => model.Solution)</h3>
                        <p class="font-italic font-weight-bold text-secondary">@Html.DisplayFor(model => model.Solution)</p>
                        <hr />
                    </div>
                }
            }

        </div>

        <div class="col-md-8">
            @*<h3 class="my-3">Tecnologias</h3>

                <div>
                    <p class="multiline "> @Html.DisplayFor(model => model.Languages)</p>


                </div>*@

            @if (User.IsInRole("Administrador"))
            {
                <div>
                    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
                    <a asp-action="Index">Back to List</a>
                </div>
            }

        </div>
    </div>

</div>

