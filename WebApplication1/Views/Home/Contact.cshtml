@model infoSys.Models.Contact

@{
    ViewData["Title"] = "Contact";
}


<div class="container-fluid">

    <div class="row">
        <div class="col-12 text-center my-5">
            <h2 class="display-4"> <i class="fas fa-paper-plane text-secondary" aria-hidden="true"></i>CONTACT</h2>
        </div>
    </div>


    <div class="row justify-content-center mb-5">
        <div class="col-sm-12 col-md-10 col-lg-8">
            @if (ViewBag.Message == null)
            {
                <form asp-action="Contact" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-muted"></div>
                    <div class="form-row">
                        <div class="form-group col-sm-6">
                            <label asp-for="Name" class="control-label">Nome</label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-muted"></span>
                        </div>
                        <div class="form-group col-sm-6">
                            <label asp-for="Subject">Assunto</label>
                            <select asp-for="Subject" class="form-control">
                                <option label="Just Say Hi" selected>Just Say Hi</option>
                                <option label="Business">Business</option>
                                <option label="Other">Other</option>
                            </select>
                            <span asp-validation-for="Subject"class="text-muted"></span>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-sm-12">
                            <label asp-for="Email">Email</label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email"class="text-muted"></span>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-sm-12">
                            <label asp-for="Message">Mensagem</label>
                            <textarea rows="5" cols="15" asp-for="Message" class="form-control"></textarea>
                            <span asp-validation-for="Message" class="text-muted"></span>
                        </div>
                    </div>
                    <div>
                        <button id="send" type="submit" class="btn btn-secondary"> <i class="fas fa-dove"></i> Enviar</button>
                       
                    </div>
                </form>
            }
        </div>

        <div>
            <div>
                @if (ViewBag.Message != null)
                {
                    <div class="col-12 text-center my-5">
                        <h2 class="display-4"> <i aria-hidden="true"></i>@ViewBag.Message</h2>
                    </div>
                    //<div>@ViewBag.Message</div>
                }
            </div>
        </div>
    </div>





</div>


